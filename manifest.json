{
  "manifest_version": 3,
  "name": "FluxIA Sales Copilot V3",
  "version": "3.0",
  "permissions": [
    "tabCapture", 
    "offscreen",
    "activeTab",
    "scripting"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "web_accessible_resources": [
    {
        "resources": ["offscreen.html"],
        "matches": ["<all_urls>"]
    }
  ]
}
